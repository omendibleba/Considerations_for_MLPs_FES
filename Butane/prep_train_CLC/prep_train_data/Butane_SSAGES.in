
# Define name of log file 
log            butane_nvt_prod.log

# Model system
units           real
atom_style      full
boundary        p p p
pair_style      lj/cut/coul/long 12.0
dielectric      1.0
pair_modify     tail yes mix geometric
bond_style      harmonic
angle_style     harmonic
dihedral_style  opls
kspace_style    pppm 1.0e-6
special_bonds   lj/coul 0.0 0.0 0.5
neighbor        2.0 bin
neigh_modify    every 1 delay 0 check yes

#read_data Butane.data
read_data       butane_nvt_equil_copy.data
group           mobile union all

# Setup timestep
timestep        1

# Define thermo output
#thermo 1000
thermo          20
thermo_style    custom step time temp pe ke etotal press lx ly lz vol density


#Create initial velocity distribution
velocity	all create 500 432567 dist uniform

## Fix commands
fix 5 all plumed plumedfile plumed_but.dat outfile plumed.out # Use plumed to analyze CVs

fix 2 all nvt temp 500 500 100 ## iso 1.0 1.0 1000.0

# Define Dumping 
dump 1 all xyz 20 but_test.xyz
dump myDump2 all custom 20 forces.dump id type x y z fx fy fz

dump_modify 1 sort id
dump_modify myDump2 sort id


#run 100000
run 2000000
